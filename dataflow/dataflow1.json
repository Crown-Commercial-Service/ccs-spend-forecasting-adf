{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "SourceDataset_SQLServer_tables",
						"type": "DatasetReference"
					},
					"name": "source1",
					"description": "Import data from SourceDataset_SQLServer_tables"
				}
			],
			"sinks": [],
			"transformations": [],
			"scriptLines": [
				"parameters{",
				"     table_name as string,",
				"     table_schema as string",
				"}",
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     query: (SELECT * from [$table_schema].[$table_name];),",
				"     format: 'query') ~> source1"
			]
		}
	}
}